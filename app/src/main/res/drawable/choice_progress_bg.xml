<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景颜色-->
    <item android:id="@android:id/background">
        <shape>
            <corners  android:radius="22dp" /> <!--圆角-->
            <gradient android:startColor="#f7f7f7"
                android:endColor="#f7f7f7"
                android:angle="270.0"
                android:centerY="0.75"
                android:centerColor="#f7f7f7" /> <!--渐变的背景-->
            <!--<stroke android:width="0.5dp" android:color="#7d7f83" />&lt;!&ndash; 描边，边框宽度、颜色 &ndash;&gt;-->

        </shape>
    </item>


    <!--进度颜色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="22dp" />
                <gradient
                    android:startColor="#e2e4e8"
                    android:endColor="#e2e4e8"
                    android:centerColor="#e2e4e8"
                    android:angle="270.0" />
                <!--<stroke android:width="0.5dp" android:color="#7d7f83" />-->
            </shape>
        </clip>
    </item>
</layer-list>