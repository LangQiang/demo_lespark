<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/travel_desert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/travel_desert" />

    <View
        android:id="@+id/travel_cloud_left"
        android:layout_width="199dp"
        android:layout_height="101dp"
        android:layout_marginLeft="-160dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/travel_cloud_left" />

    <View
        android:id="@+id/travel_cloud_right"
        android:layout_width="244dp"
        android:layout_height="97dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/travel_cloud_right" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_marginLeft="-498dp"
            android:layout_marginTop="100dp"
            android:id="@+id/travel_plane"
            android:background="@drawable/travel_plane"
            android:layout_width="498dp"
            android:layout_height="79dp"/>
    </LinearLayout>

    <View
        android:id="@+id/travel_camel"
        android:layout_width="205dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginRight="-170dp"
        android:background="@drawable/travel_camel" />

    <View
        android:id="@+id/travel_grass_left"
        android:layout_width="128dp"
        android:layout_height="217dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-70dp"
        android:layout_marginLeft="-50dp"
        android:background="@drawable/travel_grass_left" />

    <View
        android:id="@+id/travel_grass_right"
        android:layout_width="128dp"
        android:layout_height="217dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-70dp"
        android:layout_marginRight="-50dp"
        android:background="@drawable/travel_grass_right" />

    <View
        android:id="@+id/travel_yezishu_left"
        android:layout_alignParentBottom="true"
        android:background="@drawable/travel_yezishu_left"
        android:layout_width="148dp"
        android:layout_height="243dp" />

    <View
        android:id="@+id/travel_yezishu_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/travel_yezishu_right"
        android:layout_width="148dp"
        android:layout_height="243dp" />

    <View
        android:id="@+id/travel_maple_left"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:background="@drawable/travel_maple_left"
        android:layout_width="250dp"
        android:layout_marginBottom="70dp"
        android:layout_height="148dp"/>

    <View
        android:id="@+id/travel_maple_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/travel_maple_right"
        android:layout_width="250dp"
        android:layout_height="148dp"/>

    <FrameLayout
        android:id="@+id/travel_car_container"
        android:layout_width="255dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-85dp"
        android:visibility="invisible">

        <View
            android:id="@+id/travel_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/travel_car" />

        <View
            android:id="@+id/travel_bowknot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/travel_bowknot" />
    </FrameLayout>

    <View
        android:id="@+id/horizontal_center_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/travel_avatar_left"
        android:layout_width="56dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/horizontal_center_line"
        android:background="@drawable/travel_avatar_blue" />

    <ImageView
        android:id="@+id/travel_avatar_right"
        android:layout_width="56dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/horizontal_center_line"
        android:background="@drawable/travel_avatar_pink" />

    <View
        android:id="@+id/travel_balloon1"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/travel_hot_balloon2"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon2"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/travel_hot_balloon1"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon3"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/travel_hot_balloon2"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon4"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_centerInParent="true"
        android:background="@drawable/travel_hot_balloon1"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon5"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/travel_hot_balloon3"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon6"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/travel_hot_balloon1"
        android:visibility="invisible" />

    <View
        android:id="@+id/travel_balloon7"
        android:layout_width="64dp"
        android:layout_height="93dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/travel_hot_balloon1"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/travel_flower_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"></FrameLayout>



    <View
        android:id="@+id/travel_sea_mew_small"
        android:layout_width="160dp"
        android:layout_height="228dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginLeft="-361dp"
        android:background="@drawable/travel_sea_mew_big"/>

    <View
        android:id="@+id/travel_sea_mew_big"
        android:layout_width="306dp"
        android:layout_height="443dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="-306dp"
        android:background="@drawable/travel_sea_mew_big"/>
    <View
        android:id="@+id/travel_othor_sea_mew_small"
        android:background="@drawable/travel_other_sea_mew"
        android:layout_width="66dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="-119dp"
        android:layout_height="62dp"/>
    <View
        android:id="@+id/travel_othor_sea_mew_big"
        android:background="@drawable/travel_other_sea_mew"
        android:layout_width="89dp"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-89dp"
        android:layout_marginBottom="250dp"
        android:layout_height="83dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:text="text"
        android:textColor="#ff3e54"
        android:textSize="20sp" />
</RelativeLayout>