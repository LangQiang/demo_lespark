<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/level_up_container"
        android:layout_width="338dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true">


        <View
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/level_up_light"></View>

        <View
            android:id="@+id/level_up_flash_light"
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/level_up_flash_light" />

        <RelativeLayout
            android:layout_width="338dp"
            android:layout_height="220dp">

            <View
                android:id="@+id/wing_left"
                android:layout_width="79dp"
                android:layout_height="74dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/level_up_wing_left"
                android:rotation="-55" />

            <View
                android:id="@+id/wing_right"
                android:layout_width="79dp"
                android:layout_height="74dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/level_up_wing_right"
                android:rotation="55" />
        </RelativeLayout>

        <View
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center"
            android:background="@drawable/level_up_container" />

        <FrameLayout
            android:layout_width="248dp"

            android:layout_height="248dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/level_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="13"
                android:textColor="#FFF8B2"
                android:textSize="51sp"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:id="@+id/level_up_tip"
            android:layout_width="141dp"
            android:layout_height="36dp"
            android:layout_above="@+id/anim_level_up_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/level_up_tip"></View>

        <TextView
            android:id="@+id/anim_level_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="感谢xxx送的xxx"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <View
            android:id="@+id/level_up_point"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="147dp"
            android:background="@drawable/level_up_light_point"></View>
    </RelativeLayout>
</RelativeLayout>