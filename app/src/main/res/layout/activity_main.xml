<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3e54"
    tools:context="com.example.lq.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:background="#ffffff"
            android:id="@+id/text_iv"
            android:src="@drawable/ddd"
            android:scaleType="matrix"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/encrypt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="双重加密"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ratio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="指定宽高比"
            android:textColor="#333333"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/choice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="答题弹窗"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/texture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="texture"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xfermode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="xfermode"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="notify"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sticky"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="stickyRecyclerView"
            android:textColor="#333333"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/flexible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="两个按钮"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/nine_pic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="九张图片"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/path_anim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="小动画"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/level_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="升级"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/collapsible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="收起-全文"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/swipe_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="右滑关闭"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hot_fix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="hot_fix"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/colourful_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="colourful"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/pic_preview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="仿微信大图"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/like_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="点赞飘心"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cake_anim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="14dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:text="cake_anim"
            android:textColor="#333333"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>
